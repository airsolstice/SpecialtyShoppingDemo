<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/rect_wbg_shadow_top_bottom"
              android:orientation="horizontal">


    <ImageView
        android:id="@+id/item_img"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:background="@drawable/rect_btn_gbg"
        android:src="@drawable/pre_loading"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:text="杨大爷"
            android:textStyle="bold"
            android:textColor="#272636"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/item_detail"
            android:layout_width="match_parent"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="杨大爷经典麻辣香肠川味腊肠500g烟熏肉腊肠四川特产腊肉腊味"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:text="￥ 53/kg"
                android:textSize="13sp"
                android:textColor="#d50000"
                android:layout_margin="15dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_volume"
                android:layout_width="wrap_content"
                android:text="销量 1.5w"
                android:textColor="#bdbdbd"
                android:textSize="12sp"
                android:layout_margin="15dp"
                android:layout_height="wrap_content"/>



        </LinearLayout>


        <TextView
            android:id="@+id/item_origin"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|right"
            android:padding="3dp"
            android:text="四川成都"
            android:layout_margin="10dp"
            android:textColor="#bdbdbd"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</LinearLayout>
